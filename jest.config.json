{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.test.ts"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "src/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 93,
      "functions": 93,
      "lines": 93,
      "statements": -10
    }
  },
  "coverageReporters": [
    "json",
    "html"
  ]
}